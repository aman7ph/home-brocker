{
  "compilerOptions": {
    "target": "ES6",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES6"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "backend",
    "outDir": "dist"
  },
  "include": ["backend/**/*"]
}
